<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leme.gitissuesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_github_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_github_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.IssueDetailActivity"
            android:label="@string/label_issue_detail"></activity>
        <activity android:name=".view.activity.MainActivity"></activity>
    </application>

</manifest>